    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="56dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"

    android:paddingEnd="24dp"
    android:paddingBottom="100dp"

    >

